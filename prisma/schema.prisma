generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Course {
  id          String @id @default(cuid())
  title       String
  description String
  category    String
  attending   User   @relation(references: [id], fields: [userId])
  userId      String

  @@index([userId])
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  courses   Course[]
  role      String
}
